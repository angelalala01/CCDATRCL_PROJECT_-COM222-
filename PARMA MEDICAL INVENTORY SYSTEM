class User:
    def __init__(self, username, password):
        self.username = username
        self.password = password

class MedicalItem:
    def __init__(self, item_id, name, price, quantity):
        self.item_id = item_id
        self.name = name
        self.price = price
        self.quantity = quantity
        self.next = None

class MedicalInventorySystem:
    def __init__(self):
        self.head = None

    def add_medical_item(self, item_id, name, price, quantity):
        new_item = MedicalItem(item_id, name, price, quantity)
        if not self.head:
            self.head = new_item
        else:
            current = self.head
            while current.next:
                current = current.next
            current.next = new_item

    def update_medical_item(self, item_id, price, quantity):
        current = self.head
        while current:
            if current.item_id == item_id:
                current.price = price
                current.quantity = quantity
                break
            current = current.next

    def display_medical_items(self):
        current = self.head
        while current:
            print(f"Item ID: {current.item_id}, Name: {current.name}, Price: {current.price}, Quantity: {current.quantity}")
            current = current.next

    def reorder_item(self, item_id, order_quantity):
        current = self.head
        while current:
            if current.item_id == item_id:
                current.quantity += order_quantity
                break
            current = current.next

    def remove_item(self, item_id):
        current = self.head
        prev = None
        while current:
            if current.item_id == item_id:
                if prev:
                    prev.next = current.next
                else:
                    self.head = current.next
                break
            prev = current
            current = current.next

    def check_inventory(self, item_id):
        current = self.head
        while current:
            if current.item_id == item_id:
                return current.quantity
            current = current.next
        return None

# User management
users = [User("admin1", "123"), User("admin2", "345")]

def login():
    username = input("Enter username: ")
    password = input("Enter password: ")
    for user in users:
        if user.username == username and user.password == password:
            print(f"Welcome, {username}!")
            return user
    print("Invalid credentials. Please try again.")
    return None

def main():
    logged_user = None

    while True:
        if not logged_user:
            logged_user = login()
            if not logged_user:
                continue

        print("\nMedical Inventory System")
        print("1. Add Medical Item")
        print("2. Update Medical Item")
        print("3. Display Medical Items")
        print("4. Reorder Item")
        print("5. Remove Item")
        print("6. Check Inventory")
        print("7. Logout")

        choice = input("Enter your choice: ")
        if choice == '1':
            item_id = int(input("Enter Item ID: "))
            name = input("Enter Item Name: ")
            price = float(input("Enter Item Price: " + "Php "))
            quantity = int(input("Enter Item Quantity: "))
            MedicalInventorySystem.add_medical_item(item_id, name, price, quantity)
        elif choice == '2':
            item_id = int(input("Enter Item ID to update: "))
            price = float(input("Enter New Price: "))
            quantity = int(input("Enter New Quantity: "))
            MedicalInventorySystem.update_medical_item(item_id, price, quantity)
        elif choice == '3':
            MedicalInventorySystem.display_medical_items()
        elif choice == '4':
            item_id = int(input("Enter Item ID to reorder: "))
            order_quantity = int(input("Enter Quantity to reorder: "))
            MedicalInventorySystem.reorder_item(item_id, order_quantity)
        elif choice == '5':
            item_id = int(input("Enter Item ID to remove: "))
            MedicalInventorySystem.remove_item(item_id)
        elif choice == '6':
            item_id = int(input("Enter Item ID to check inventory: "))
            quantity = MedicalInventorySystem.check_inventory(item_id)
            if quantity is not None:
                print(f"Inventory of Item {item_id}: {quantity}")
            else:
                print(f"Item {item_id} not found in inventory.")
        elif choice == '7':
            logged_user = None
        else:
            print("Invalid choice. Please try again.")

if __name__ == "__main__":
    main()
